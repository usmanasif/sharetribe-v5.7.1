:css
  ul{
    list-style-type: none;
  }
  .mobile-badge{
    position: relative;
    top: -11px;
    left: 12px;
    background: #a64c5d;
    color: white;
    width: 19px;
    height: 19px;
    line-height: 19px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius: 10px;
    border-radius: 10px;
    text-align: center;
  }
  .login-admin-profile {
    display: table !Important;
    width: 96%;
    display: inline-block;
    border: none;
    border-radius: 0;
    background: #eee;
    line-height: 3.5625em;
    display: block;
    font-size: 1em;
    color: #3c3c3c;
  }
  .image-holder-login-menu  {
    display: table-cell;
    width: 20px;
    height: 20px;
    background: #000;
  }
  .login-admin-profile .login-btn {
    display: table-cell;
    vertical-align: middle;
    width: auto;
    background: none !important;
    padding: 0 !important;
    border: none !important;
    font-size: 14px;
    width: auto;
    height: 27px;
    margin: 0;
  }
